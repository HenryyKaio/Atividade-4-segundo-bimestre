programa
{
	
	funcao inicio()
	{
		inteiro N
		escreva("Me diga um número: ")
		leia(N)

		para(inteiro i=1; i <= N; i++){
			escreva(i, "\n")
		}
		escreva("\n\n\n")

		para(inteiro i=N; i > 0; i--){
			escreva(i, "\n")
		}
	}
}
